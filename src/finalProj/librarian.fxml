<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
        <Label text="Welcome, Librarian" GridPane.columnSpan="2" />
        <Button onAction="#handleLogout" text="Logout" GridPane.columnIndex="2" />
        <Label text="Manage Books" GridPane.rowIndex="4" />
        <TextField fx:id="bookTitleField" promptText="Title" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="bookAuthorField" promptText="Author" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="bookISBN" promptText="ISBN" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button onAction="#handleAddBook" text="Add Book" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Button onAction="#handleRemoveBook" text="Remove Book" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label text="Manage Users" GridPane.columnIndex="3" GridPane.rowIndex="4" />
        <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <TextField fx:id="passwordField" promptText="Password" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Button onAction="#handleAddUser" text="Add User" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button onAction="#handleRemoveUser" text="Remove User" GridPane.columnIndex="2" GridPane.rowIndex="6" />
        <ToggleButton fx:id="isLibrarian" mnemonicParsing="false" text="Librarian" GridPane.columnIndex="2" GridPane.rowIndex="7" />
        <Label fx:id="errorLabel" GridPane.columnSpan="2" GridPane.rowIndex="8" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
